<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                    android:color="#c00" />
            <gradient android:angle="-90" android:startColor="#cc0000" android:endColor="#990000"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                    android:color="#c00" />
            <gradient android:angle="-90" android:startColor="#ff0000" android:endColor="#cc0000"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                    android:color="#c00" />
            <gradient android:angle="-90" android:startColor="#ff0000" android:endColor="#cc0000"  />
        </shape>
    </item>
</selector>